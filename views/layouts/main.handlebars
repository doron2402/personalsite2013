      <script type="text/javascript">
      $(document).ready(function(){
        $('#submit-btn-contact-form').click(function(e){
          e.preventDefault();
          var formParams = {};
          $('form#contact-form > div').each(function(k,v){
            if (  $(v).children().children().attr('name') !== undefined && 
                  $(v).children().children().val() !== undefined)
            {
              formParams[$(v).children().children().attr('name')] = $(v).children().children().val()
            }
          });
          var request = $.ajax({
              url: "/contact",
              type: "POST",
              data: formParams,
              dataType: "json"
            });
             
            request.done(function( msg ) {
              alert(msg);
            });
             
            request.fail(function( jqXHR, textStatus ) {
              alert( "Request failed: " + textStatus );
            });
        });
        
      });
